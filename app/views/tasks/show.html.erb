

<% flash.each do |key, value| %>
  <%= content_tag :div, value, :class => "flash #{key}" unless value.blank? %>
<% end %>


<p>
  <b>Description:</b>
  <%= @task.description %>
</p>

<p>
  <b>Tags:</b>
  <%= @task.tags %>
</p>

<p>
  <b>Started:</b>
  <% if @task.started? %>
    <%= @task.start_time %> 
  <% else %>
    <%= @task.started %>
  <% end %>
</p>

<p>
  <b>Finished:</b>
  <%= @task.finished %>
</p>


<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %> |
<%= link_to 'Destroy', task_path(@task), :confirm => 'Are you sure?', :method => :delete %>
