= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :label
    %br/
    = f.text_field :label
  .field
    = f.label :tags
    %br/
    = f.text_field :tags
  .field
    = f.label :started
    %br/
    = f.check_box :started
  .field
    = f.label :finished
    %br/
    = f.check_box :finished
  .actions
    = f.submit
