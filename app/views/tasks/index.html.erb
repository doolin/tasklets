<h2 class="tasklet-list">Tasklet list</h2>

<table>
  <tr>
    <th>Description</th>
    <th>Started</th>
    <th>Finished</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.description %></td>
    <td><%= task.started %></td>
    <td><%= task.finished %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if user_signed_in? %>
<%= link_to 'New Task', new_task_path %>
<% end %>
