= form_for(@profile) do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2
        = pluralize(@profile.errors.count, "error")
        prohibited this profile from being saved:
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :firstname
    %br/
    = f.text_field :firstname
  .field
    = f.label :lastname
    %br/
    = f.text_field :lastname
  .field
    = f.label :bio
    %br/
    = f.text_area :bio
  .field
    = f.label :website
    %br/
    = f.text_field :website
  .field
    = f.label :twitter
    %br/
    = f.text_field :twitter
  .field
    = f.label :facebook
    %br/
    = f.text_field :facebook
  .field
    = f.label :linkedin
    %br/
    = f.text_field :linkedin
  .field
    = f.label :google
    %br/
    = f.text_field :google
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .actions
    = f.submit
