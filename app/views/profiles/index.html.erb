<h1>Listing profiles</h1>

<table>
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Bio</th>
    <th>Website</th>
    <th>Twitter</th>
    <th>Facebook</th>
    <th>Linkedin</th>
    <th>Google</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.firstname %></td>
    <td><%= profile.lastname %></td>
    <td><%= profile.bio %></td>
    <td><%= profile.website %></td>
    <td><%= profile.twitter %></td>
    <td><%= profile.facebook %></td>
    <td><%= profile.linkedin %></td>
    <td><%= profile.google %></td>
    <td><%= profile.url %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

